<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MesTechStok.Desktop">
    
    <!-- ðŸŽ¯ BRAVO TÄ°MÄ° - Modern Navigation Styles -->
    
    <!-- Modern Navigation Menu Item Style -->
    <Style x:Key="ModernNavMenuItemStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SurfaceWhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="Margin" Value="8,2"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}"
                            x:Name="PART_Border">
                        <Grid>
                            <!-- Gradient Overlay + Active Left Strip -->
                            <Border CornerRadius="8" x:Name="PART_GradientOverlay" Opacity="0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="{StaticResource OrangePrimaryColor}" Offset="0"/>
                                        <GradientStop Color="#10FFFFFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <!-- Active left strip with gentle expand animation -->
                            <Border x:Name="PART_LeftStrip"
                                    HorizontalAlignment="Left"
                                    Width="0"
                                    Background="{StaticResource OrangeGradientBrush}"
                                    CornerRadius="8,0,0,8"/>
                            
                            <!-- Content -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Icon container for arbitrary content (e.g., IconPacks) -->
                                <Border Grid.Column="0" 
                                       Background="{StaticResource OrangePrimaryBrush}"
                                       Width="32" Height="32"
                                       CornerRadius="6"
                                       Margin="0,0,12,0"
                                       x:Name="PART_IconBorder">
                                    <ContentPresenter x:Name="PART_IconPresenter"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      RecognizesAccessKey="False"/>
                                </Border>
                                
                                <!-- Content Text -->
                                <ContentPresenter Grid.Column="1" 
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                x:Name="PART_Content"/>
                                
                                <!-- Active Indicator -->
                                <!-- Active Indicator (animate opacity for micro feedback) -->
                                <Grid Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <!-- Badge (port if using NavProperties) -->
                                    <Border x:Name="PART_Badge"
                                            Background="#E53935"
                                            CornerRadius="10"
                                            Padding="6,1"
                                            Margin="8,0,0,0"
                                            Visibility="Collapsed">
                                        <TextBlock x:Name="PART_BadgeText"
                                                   Foreground="White"
                                                   FontSize="11"
                                                   FontWeight="Bold"/>
                                    </Border>
                                    <!-- Active dot -->
                                    <Ellipse Width="8" Height="8"
                                             Fill="{StaticResource AccentGreenBrush}"
                                             x:Name="PART_ActiveIndicator"
                                             Opacity="0"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <ControlTemplate.Triggers>
                        <!-- Hover State -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="Background" 
                                    Value="{StaticResource BackgroundLightBrush}"/>
                            <Setter TargetName="PART_GradientOverlay" Property="Opacity" Value="1"/>
                            <Setter TargetName="PART_IconBorder" Property="Background" 
                                    Value="{StaticResource OrangeHoverBrush}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.02" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.02" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.0" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.0" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- Collapse sidebar: hide text when SidebarToggle is checked -->
                        <DataTrigger Binding="{Binding ElementName=SidebarToggle, Path=IsChecked}" Value="True">
                            <Setter TargetName="PART_Content" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="PART_IconBorder" Property="Width" Value="40"/>
                            <Setter TargetName="PART_IconBorder" Property="Height" Value="40"/>
                            <Setter Property="Padding" Value="14,10"/>
                        </DataTrigger>

                        <!-- Pressed State -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Border" Property="Background" 
                                    Value="{StaticResource OrangePrimaryBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter TargetName="PART_IconBorder" Property="Background" 
                                    Value="{StaticResource SurfaceWhiteBrush}"/>
                        </Trigger>
                        
                        <!-- Active State (Custom) -->
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="Active">
                            <Setter TargetName="PART_Border" Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Setter TargetName="PART_GradientOverlay" Property="Opacity" Value="0.8"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_LeftStrip"
                                                         Storyboard.TargetProperty="Width"
                                                         To="4" Duration="0:0:0.16">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="PART_ActiveIndicator" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_LeftStrip"
                                                         Storyboard.TargetProperty="Width"
                                                         To="0" Duration="0:0:0.16">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="PART_ActiveIndicator" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>

                        <!-- Badge gÃ¶rÃ¼nÃ¼rlÃ¼ÄŸÃ¼: HasBadge True ise gÃ¶ster -->
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:NavProperties.HasBadge)}" Value="True">
                            <Setter TargetName="PART_Badge" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="PART_BadgeText" Property="Text" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:NavProperties.BadgeText)}"/>
                        </DataTrigger>
                        
                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Breadcrumb Button Style -->
    <Style x:Key="BreadcrumbButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" 
                                    Value="{StaticResource BackgroundLightBrush}"/>
                            <Setter Property="BorderBrush" 
                                    Value="{StaticResource OrangePrimaryBrush}"/>
                            <Setter Property="Foreground" 
                                    Value="{StaticResource OrangePrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" 
                                    Value="{StaticResource OrangePrimaryBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Logo Area Style -->
    <Style x:Key="LogoAreaStyle" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource BackgroundLightColor}" Offset="0"/>
                    <GradientStop Color="#F0F3F7" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="20,15"/>
    </Style>
    
    <!-- User Info Area Style -->
    <Style x:Key="UserInfoAreaStyle" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F0F3F7" Offset="0"/>
                    <GradientStop Color="{StaticResource BackgroundLightColor}" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="Padding" Value="20,15"/>
    </Style>
    
    <!-- Gallery Toggle Button Style -->
    <Style x:Key="ModernGalleryToggleButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource OrangePrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="25">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="3" 
                                            Color="Black" Opacity="0.3"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource OrangeHoverBrush}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.0" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource OrangeDarkBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary> 