<UserControl x:Class="MesTechStok.Desktop.Components.FlurryClockComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <!-- Modern Pulse Animation -->
        <Storyboard x:Key="ClockPulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="TimeColon" 
                           Storyboard.TargetProperty="Opacity" 
                           From="1.0" To="0.3" Duration="0:0:1" 
                           AutoReverse="True"/>
        </Storyboard>
        
        <!-- Temperature Glow Animation -->
        <Storyboard x:Key="TemperatureGlow" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="TemperatureGlow" 
                          Storyboard.TargetProperty="(DropShadowEffect.Color)" 
                          From="#FFD700" To="#FFA500" Duration="0:0:3" 
                          AutoReverse="True"/>
        </Storyboard>
        
        <!-- Modern Dark Container Style (FÃ¼me Background) -->
        <Style x:Key="ModernDarkContainer" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2C2C2C" Offset="0"/>
                        <GradientStop Color="#3A3A3A" Offset="0.5"/>
                        <GradientStop Color="#2C2C2C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FFD700"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="8" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Typography Styles -->
        <Style x:Key="PrimaryTimeStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI, Roboto, Open Sans"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="2" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="TemperatureStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI, Roboto, Open Sans"/>
            <Setter Property="FontSize" Value="52"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect x:Name="TemperatureGlow" Color="#FFD700" BlurRadius="15" ShadowDepth="0" Opacity="0.9"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI, Open Sans"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="AccentTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI, Roboto"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Modern Dark Container -->
    <Border x:Name="MainContainer" 
            Style="{StaticResource ModernDarkContainer}" 
            Width="280" Height="320" 
            Margin="20">
        
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Weather Icon with Modern Styling -->
            <Grid Grid.Row="0" HorizontalAlignment="Center">
                <Ellipse Width="70" Height="70" 
                         Fill="#3A3A3A" 
                         Stroke="#FFD700"
                         StrokeThickness="2"
                         Opacity="0.6"/>
                <TextBlock x:Name="WeatherIcon" 
                           Text="â˜ï¸" 
                           FontSize="42" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FFD700" BlurRadius="12" ShadowDepth="0" Opacity="0.7"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>

            <!-- Temperature Display (Enhanced) -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                <TextBlock x:Name="TemperatureText" 
                           Text="22Â°" 
                           Style="{StaticResource TemperatureStyle}"/>
            </StackPanel>

            <!-- Weather Description with Modern Typography -->
            <TextBlock Grid.Row="4" 
                       x:Name="WeatherDescriptionText"
                       Text="Bulutlu"
                       Style="{StaticResource AccentTextStyle}"/>

            <!-- Time Display with Enhanced Typography -->
            <StackPanel Grid.Row="6" HorizontalAlignment="Center">
                <!-- Clock Icon with Yellow Accent -->
                <TextBlock x:Name="ClockIcon" 
                           Text="ðŸ•" 
                           FontSize="24" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <!-- Enhanced Time Display -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="HourText" 
                               Text="14" 
                               Style="{StaticResource PrimaryTimeStyle}"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="TimeColon"
                               Text=":" 
                               FontFamily="Segoe UI, Roboto"
                               FontSize="48" 
                               FontWeight="Light"
                               Foreground="#FFD700" 
                               Margin="5,0"
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FFD700" BlurRadius="8" ShadowDepth="0" Opacity="0.9"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="MinuteText" 
                               Text="30" 
                               Style="{StaticResource PrimaryTimeStyle}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Date Display with Improved Typography -->
            <TextBlock Grid.Row="8" 
                       x:Name="DateText"
                       Text="15 Ocak 2024, Pazartesi"
                       Style="{StaticResource SecondaryTextStyle}"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       LineHeight="18"/>

            <!-- Status Indicator with Modern Design -->
            <StackPanel Grid.Row="10" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Ellipse Width="12" Height="12" 
                         Fill="#4CAF50" 
                         Margin="0,0,10,0">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="#4CAF50" BlurRadius="8" ShadowDepth="0" Opacity="0.9"/>
                    </Ellipse.Effect>
                </Ellipse>
                <TextBlock x:Name="SystemStatusText" 
                           Text="Sistem Aktif" 
                           FontFamily="Segoe UI, Open Sans"
                           FontSize="12" 
                           FontWeight="Medium"
                           Foreground="#4CAF50" 
                           VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#4CAF50" BlurRadius="4" ShadowDepth="0" Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
    
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard Storyboard="{StaticResource ClockPulseAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource TemperatureGlow}"/>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl> 