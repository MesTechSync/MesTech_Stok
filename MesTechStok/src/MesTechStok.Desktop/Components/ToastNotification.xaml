<UserControl x:Class="MesTechStok.Desktop.Components.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="380" Height="Auto">
    
    <UserControl.Resources>
        <!-- ðŸŽ¨ BRAVO TÄ°MÄ° - Modern Toast Animations -->
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetName="ToastContainer"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="400" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.4"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ToastContainer"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.4"/>
        </Storyboard>
        
        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetName="ToastContainer"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="0" To="400" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ToastContainer"
                           Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.3"/>
        </Storyboard>
        
        <Storyboard x:Key="ProgressAnimation">
            <DoubleAnimation Storyboard.TargetName="ProgressBar"
                           Storyboard.TargetProperty="Width"
                           From="380" To="0" Duration="0:0:5"/>
        </Storyboard>
    </UserControl.Resources>
    
    <Grid x:Name="ToastContainer" Opacity="0">
        <Grid.RenderTransform>
            <TranslateTransform X="400"/>
        </Grid.RenderTransform>
        
        <!-- Main Toast Border -->
        <Border x:Name="ToastBorder" 
                Background="{Binding ToastBackground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                CornerRadius="12" 
                BorderBrush="{Binding ToastBorderBrush, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                BorderThickness="0,0,0,4"
                Margin="8"
                Opacity="0.96">
            
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="8" Color="Black" Opacity="0.25"/>
            </Border.Effect>
            
            <!-- Gradient Overlay -->
            <Border CornerRadius="12">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#10FFFFFF" Offset="0"/>
                        <GradientStop Color="#05FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <Grid Margin="20,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Modern Icon with Glow -->
                    <Border Grid.Row="0" Grid.Column="0" 
                           Background="{Binding IconBackground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Width="40" Height="40"
                           CornerRadius="20"
                           Margin="0,0,16,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="{Binding IconGlowColor, RelativeSource={RelativeSource AncestorType=UserControl}}" Opacity="0.6"/>
                        </Border.Effect>
                        
                        <TextBlock x:Name="IconText" 
                                  Text="{Binding ToastIcon, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                  FontSize="20" 
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Foreground="White"/>
                    </Border>
                    
                    <!-- Title -->
                    <TextBlock x:Name="TitleText" 
                              Grid.Row="0" Grid.Column="1"
                              Text="{Binding ToastTitle, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                              Style="{StaticResource HeaderSmallStyle}"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0"/>
                    
                    <!-- Modern Close Button -->
                    <Button x:Name="CloseButton" 
                           Grid.Row="0" Grid.Column="2"
                           Content="âœ•" 
                           Background="Transparent" 
                           Foreground="White"
                           BorderThickness="0" 
                           FontSize="16"
                           Width="32" Height="32"
                           VerticalAlignment="Top"
                           Click="CloseButton_Click"
                           Cursor="Hand"
                           Opacity="0.7">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="16"
                                                   Width="32" Height="32">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                        <Setter Property="Opacity" Value="1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Message -->
                    <TextBlock x:Name="MessageText" 
                              Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                              Text="{Binding ToastMessage, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                              TextWrapping="Wrap" 
                              Style="{StaticResource BodyTextStyle}"
                              Foreground="White"
                              Opacity="0.9"
                              Margin="0,8,0,0"/>
                    
                    <!-- Action Buttons (Optional) -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                               Orientation="Horizontal" 
                               Margin="0,12,0,0"
                               Visibility="{Binding ShowActionButtons, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button x:Name="ActionButton1" 
                               Content="{Binding ActionButton1Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               Background="#40FFFFFF"
                               Foreground="White"
                               BorderThickness="1"
                               BorderBrush="#60FFFFFF"
                               Padding="12,6"
                               Margin="0,0,8,0"
                               FontSize="12"
                               Click="ActionButton1_Click"/>
                        
                        <Button x:Name="ActionButton2" 
                               Content="{Binding ActionButton2Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="1"
                               BorderBrush="#60FFFFFF"
                               Padding="12,6"
                               FontSize="12"
                               Click="ActionButton2_Click"/>
                    </StackPanel>
                    
                    <!-- Source/Timestamp -->
                    <TextBlock x:Name="SourceText" 
                              Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                              Text="{Binding ToastSource, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                              Style="{StaticResource CaptionStyle}"
                              Foreground="White"
                              Opacity="0.6"
                              Margin="0,8,0,0"/>
                </Grid>
            </Border>
        </Border>
        
        <!-- Auto-hide Progress Bar -->
        <Border x:Name="ProgressBar"
               Background="#30FFFFFF"
               Height="4"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom"
               CornerRadius="0,0,12,12"
               Margin="8,0,8,8"
               Visibility="{Binding ShowProgress, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        
        <!-- Auto-start animation -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard Storyboard="{StaticResource SlideInAnimation}"/>
                <BeginStoryboard Storyboard="{StaticResource ProgressAnimation}"/>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</UserControl> 