<UserControl x:Class="MesTechStok.Desktop.Components.BlurryClockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <!-- Modern Dark Container Style (FÃ¼me Background) -->
        <Style x:Key="ModernDarkContainer" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2C2C2C" Offset="0"/>
                        <GradientStop Color="#3A3A3A" Offset="0.5"/>
                        <GradientStop Color="#2C2C2C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FFD700"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="8" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Time Text Style -->
        <Style x:Key="ModernTimeStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI, Roboto, Open Sans"/>
            <Setter Property="FontSize" Value="42"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFD700" BlurRadius="12" ShadowDepth="2" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Date Text Style -->
        <Style x:Key="ModernDateStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI, Open Sans"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFD700" BlurRadius="6" ShadowDepth="1" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Pulse Animation for Colon -->
        <Storyboard x:Key="ColonPulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="TimeColon" 
                           Storyboard.TargetProperty="Opacity"
                           From="1.0" To="0.3" Duration="0:0:1" AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>
    
    <Border x:Name="GlassBackground" 
            Style="{StaticResource ModernDarkContainer}"
            Width="260" Height="140"
            Margin="10">
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Time Display with Modern Styling -->
            <StackPanel Grid.Row="0" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock x:Name="HourText" 
                           Text="00" 
                           Style="{StaticResource ModernTimeStyle}"/>
                <TextBlock x:Name="TimeColon"
                           Text=":" 
                           FontFamily="Segoe UI, Roboto"
                           FontSize="42" 
                           FontWeight="Light"
                           Foreground="#FFD700" 
                           Margin="5,0"
                           VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="0" Opacity="0.9"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="MinuteText" 
                           Text="00" 
                           Style="{StaticResource ModernTimeStyle}"/>
                <TextBlock x:Name="SecondColon"
                           Text=":" 
                           FontFamily="Segoe UI, Roboto"
                           FontSize="42" 
                           FontWeight="Light"
                           Foreground="#FFD700" 
                           Margin="5,0"
                           VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="0" Opacity="0.9"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="SecondText" 
                           Text="00" 
                           Style="{StaticResource ModernTimeStyle}"/>
            </StackPanel>
            
            <!-- Date Display with Modern Typography -->
            <TextBlock x:Name="DateTextBlock" 
                       Grid.Row="1"
                       Style="{StaticResource ModernDateStyle}"
                       Text="1 Ocak 2024, Pazartesi"
                       Margin="0,10,0,5"
                       TextAlignment="Center"/>
        </Grid>
    </Border>
    
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard Storyboard="{StaticResource ColonPulseAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl> 