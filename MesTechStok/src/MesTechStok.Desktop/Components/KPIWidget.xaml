<UserControl x:Class="MesTechStok.Desktop.Components.KPIWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="280">
    
    <UserControl.Resources>
        <!-- KPI Widget Animation -->
        <Storyboard x:Key="LoadValueAnimation">
            <DoubleAnimation Storyboard.TargetName="ValueText"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="ValueText"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="10" To="0" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>
    
    <Border Style="{StaticResource ModernCardStyle}" 
            Background="{Binding Path=BackgroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
            x:Name="KPIContainer">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Icon ve Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="{Binding Path=Icon, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                          FontSize="24" 
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"
                          Foreground="{StaticResource PrimaryBlueBrush}"/>
                
                <TextBlock Text="{Binding Path=Title, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                          Style="{StaticResource HeaderSmallStyle}"
                          VerticalAlignment="Center"
                          Margin="0"/>
            </StackPanel>
            
            <!-- Value Display -->
            <Grid Grid.Row="1">
                <TextBlock x:Name="ValueText"
                          Text="{Binding Path=Value, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                          Style="{StaticResource NumberDisplayStyle}"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          FontSize="36"
                          FontWeight="Bold">
                    <TextBlock.RenderTransform>
                        <TranslateTransform Y="0"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                
                <!-- Trend Indicator -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Top">
                    <TextBlock x:Name="TrendIcon"
                              Text="ðŸ“ˆ" 
                              FontSize="16"
                              Margin="0,0,5,0"
                              Visibility="{Binding Path=ShowTrend, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    
                    <TextBlock x:Name="TrendValueText"
                              Text="{Binding Path=TrendText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              FontSize="12"
                              FontWeight="Medium"
                              Foreground="{StaticResource AccentGreenBrush}"
                              Visibility="{Binding Path=ShowTrend, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
            
            <!-- Description -->
            <TextBlock Grid.Row="2" 
                      Text="{Binding Path=Description, RelativeSource={RelativeSource AncestorType=UserControl}}"
                      Style="{StaticResource CaptionStyle}"
                      TextWrapping="Wrap"
                      Margin="0,8,0,0"
                      Visibility="{Binding Path=Description, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StringToVisibilityConverter}}"/>
        </Grid>
        
        <!-- Hover Effect Trigger -->
        <Border.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                       To="1.02" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                       To="1.02" Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                       To="1.0" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                       To="1.0" Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard Storyboard="{StaticResource LoadValueAnimation}"/>
            </EventTrigger>
        </Border.Triggers>
        
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.RenderTransformOrigin>
            <Point X="0.5" Y="0.5"/>
        </Border.RenderTransformOrigin>
    </Border>
</UserControl> 