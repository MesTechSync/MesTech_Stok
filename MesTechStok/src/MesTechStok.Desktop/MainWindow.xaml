                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Sol aktif ÅŸerit -->
                                <Border x:Name="PART_LeftStrip" Grid.Column="0" Background="#FB8C00" CornerRadius="6,0,0,6" Visibility="Collapsed"/>

                                <!-- Ä°Ã§erik + Badge alanÄ± -->
