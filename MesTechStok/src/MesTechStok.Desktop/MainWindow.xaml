<Window x:Class="MesTechStok.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MesTechStok.Desktop"
        xmlns:components="clr-namespace:MesTechStok.Desktop.Components"
        xmlns:ip="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MesTech Stok Takip Sistemi v2.0" 
        Height="900" Width="1600"
        MinHeight="800" MinWidth="1200"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
