                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- KullanÄ±cÄ± iÃ§eriÄŸi (ikon+metin) -->
                                        <ContentPresenter Grid.Column="0" VerticalAlignment="Center"/>
                                        <!-- Badge -->
                                        <Border x:Name="PART_Badge" Grid.Column="1" Background="#E53935" CornerRadius="10" Padding="8,2" Margin="10,0,0,0" Visibility="Collapsed">
                                            <TextBlock x:Name="PART_BadgeText" Foreground="White" FontSize="12" FontWeight="Bold">
                                                <TextBlock.Text>
                                                    <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="(local:NavProperties.BadgeText)"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="BorderBrush" Value="#FB8C00"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Setter Property="BorderBrush" Value="#EF6C00"/>
                            </Trigger>
                            <!-- Aktif durum -->
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:NavProperties.IsActive)}" Value="True">
                                <Setter TargetName="PART_LeftStrip" Property="Visibility" Value="Visible"/>
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="BorderBrush" Value="#FB8C00"/>
                            </DataTrigger>
                            <!-- Badge gÃ¶rÃ¼nÃ¼rlÃ¼ÄŸÃ¼: HasBadge True ise gÃ¶ster -->
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:NavProperties.HasBadge)}" Value="True">
                                <Setter TargetName="PART_Badge" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slide Animation for Gallery Panel -->
        <Storyboard x:Key="SlideInGallery">
            <DoubleAnimation Storyboard.TargetName="BackgroundGalleryPanel"
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                            From="350" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="BackgroundGalleryPanel"
                            Storyboard.TargetProperty="Opacity"
                            From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
        
        <Storyboard x:Key="SlideOutGallery">
            <DoubleAnimation Storyboard.TargetName="BackgroundGalleryPanel"
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                            From="0" To="350" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="BackgroundGalleryPanel"
                            Storyboard.TargetProperty="Opacity"
                            From="1" To="0" Duration="0:0:0.3"/>
        </Storyboard>

