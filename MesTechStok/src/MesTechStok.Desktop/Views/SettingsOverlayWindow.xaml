<Window x:Class="MesTechStok.Desktop.Views.SettingsOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ayarlar" WindowStyle="None" AllowsTransparency="True" Background="#66000000"
        WindowStartupLocation="CenterOwner" Width="900" Height="620" ShowInTaskbar="False">
    <Grid>
        <Border CornerRadius="20" Background="#CC3E2723" Padding="22" Width="820" Height="540" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.BorderBrush>
                <LinearGradientBrush>
                    <GradientStop Color="#FFD700" Offset="0"/>
                    <GradientStop Color="#FFA500" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.BorderThickness>2</Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="8" Color="#000000" Opacity="0.45"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Sistem Ayarları" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <Button Content="✖" Width="36" Height="36" FontSize="16" Background="#424242" Foreground="White" BorderThickness="0" Cursor="Hand" HorizontalAlignment="Right" DockPanel.Dock="Right" Click="Close_Click"/>
                </DockPanel>

                <!-- Tabs -->
                <TabControl Grid.Row="1">
                    <TabItem Header="Firma Bilgileri">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="10">
                                <StackPanel>
                                    <TextBlock Text="Firma Adı" Foreground="White"/>
                                    <TextBox x:Name="CompanyName" FontSize="16" Margin="0,0,0,8"/>
                                    <TextBlock Text="Vergi No" Foreground="White"/>
                                    <TextBox x:Name="CompanyTaxNumber" FontSize="16" Margin="0,0,0,8"/>
                                    <TextBlock Text="Telefon" Foreground="White"/>
                                    <TextBox x:Name="CompanyPhone" FontSize="16" Margin="0,0,0,8"/>
                                    <TextBlock Text="E-posta" Foreground="White"/>
                                    <TextBox x:Name="CompanyEmail" FontSize="16" Margin="0,0,0,8"/>
                                    <TextBlock Text="Adres" Foreground="White"/>
                                    <TextBox x:Name="CompanyAddress" AcceptsReturn="True" Height="80" TextWrapping="Wrap" FontSize="16"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Depolar &amp; Şubeler">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Button x:Name="AddWarehouseButton" Content="➕ Depo Ekle" Width="140" Height="32" Background="#4CAF50" Foreground="White" BorderThickness="0" Click="AddWarehouseButton_Click"/>
                                <Button x:Name="AddBranchButton" Content="➕ Şube Ekle" Width="140" Height="32" Background="#2196F3" Foreground="White" BorderThickness="0" Margin="10,0,0,0" Click="AddBranchButton_Click"/>
                            </StackPanel>
                            <ItemsControl x:Name="WarehouseList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,8" Padding="10" Background="#1E1E1E55" CornerRadius="10">
                                            <StackPanel>
                                                <TextBox Text="{Binding Name}" FontSize="16" Margin="0,0,0,6"/>
                                                <TextBox Text="{Binding Address}" FontSize="14" Margin="0,0,0,6"/>
                                                <TextBox Text="{Binding City}" FontSize="14" Margin="0,0,0,6"/>
                                                <TextBox Text="{Binding Phone}" FontSize="14"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </TabItem>
                </TabControl>

                <!-- Actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button Content="Kaydet" Width="120" Height="36" Background="#4CAF50" Foreground="White" BorderThickness="0" Margin="0,0,8,0" Click="Save_Click"/>
                    <Button Content="Kapat" Width="120" Height="36" Background="#757575" Foreground="White" BorderThickness="0" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>


