<UserControl x:Class="MesTechStok.Desktop.Views.HealthMetricsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:MesTechStok.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="MetricTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="StatusGoodStyle" TargetType="TextBlock" BasedOn="{StaticResource MetricValueStyle}">
            <Setter Property="Foreground" Value="#FF4CAF50"/>
        </Style>
        
        <Style x:Key="StatusWarningStyle" TargetType="TextBlock" BasedOn="{StaticResource MetricValueStyle}">
            <Setter Property="Foreground" Value="#FFFF9800"/>
        </Style>
        
        <Style x:Key="StatusErrorStyle" TargetType="TextBlock" BasedOn="{StaticResource MetricValueStyle}">
            <Setter Property="Foreground" Value="#FFF44336"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF252526" BorderBrush="#FF3F3F46" BorderThickness="0,0,0,1">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ¥" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="System Health Metrics" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" 
                            Background="#FF0E639C" Foreground="White" Padding="12,6" Margin="5,0" 
                            BorderThickness="0" ToolTip="Refresh all metrics"/>
                    <Button Content="ðŸ—‘ï¸ Clear" Command="{Binding ClearMetricsCommand}" 
                            Background="#FF8E24AA" Foreground="White" Padding="12,6" Margin="5,0" 
                            BorderThickness="0" ToolTip="Clear old telemetry data"/>
                    <Button Content="ðŸ“Š Export" Command="{Binding ExportMetricsCommand}" 
                            Background="#FF689F38" Foreground="White" Padding="12,6" Margin="5,0" 
                            BorderThickness="0" ToolTip="Export metrics to CSV"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Metrics Cards -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal" Margin="10">
                
                <!-- Sync Status Card -->
                <Border Style="{StaticResource MetricCardStyle}" Width="200">
                    <StackPanel>
                        <TextBlock Text="Sync Status" Style="{StaticResource MetricTitleStyle}"/>
                        <TextBlock Text="{Binding SyncStatus}" Style="{StaticResource MetricValueStyle}"/>
                        <TextBlock Text="{Binding LastSyncTime}" 
                                   FontSize="12" Foreground="#FFAAAAAA" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Circuit Breaker Card -->
                <Border Style="{StaticResource MetricCardStyle}" Width="200">
                    <StackPanel>
                        <TextBlock Text="Circuit Breaker" Style="{StaticResource MetricTitleStyle}"/>
                        <TextBlock Text="{Binding CircuitBreakerState}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource MetricValueStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CircuitBreakerState}" Value="Closed">
                                            <Setter Property="Foreground" Value="#FF4CAF50"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CircuitBreakerState}" Value="Open">
                                            <Setter Property="Foreground" Value="#FFF44336"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CircuitBreakerState}" Value="Half-Open">
                                            <Setter Property="Foreground" Value="#FFFF9800"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- API Calls Card -->
                <Border Style="{StaticResource MetricCardStyle}" Width="200">
                    <StackPanel>
                        <TextBlock Text="API Calls (24h)" Style="{StaticResource MetricTitleStyle}"/>
                        <TextBlock Text="{Binding TotalApiCalls}" Style="{StaticResource MetricValueStyle}"/>
                        <TextBlock Text="{Binding FailedApiCalls}" FontSize="12" Foreground="#FFF44336" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Success Rate Card (Converters restored, no BasedOn) -->
                <Border Style="{StaticResource MetricCardStyle}" Width="200">
                    <StackPanel>
                        <TextBlock Text="Success Rate" Style="{StaticResource MetricTitleStyle}"/>
                        <TextBlock Text="{Binding SuccessRate}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="24"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <Binding Path="SuccessRate">
                                                    <Binding.Converter>
                                                        <conv:GreaterThanConverter/>
                                                    </Binding.Converter>
                                                    <Binding.ConverterParameter>95</Binding.ConverterParameter>
                                                </Binding>
                                            </DataTrigger.Binding>
                                            <Setter Property="Foreground" Value="#FF4CAF50"/>
                                        </DataTrigger>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <Binding Path="SuccessRate">
                                                    <Binding.Converter>
                                                        <conv:BetweenConverter/>
                                                    </Binding.Converter>
                                                    <Binding.ConverterParameter>90,95</Binding.ConverterParameter>
                                                </Binding>
                                            </DataTrigger.Binding>
                                            <Setter Property="Foreground" Value="#FFFF9800"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Response Time Card -->
                <Border Style="{StaticResource MetricCardStyle}" Width="200">
                    <StackPanel>
                        <TextBlock Text="Avg Response" Style="{StaticResource MetricTitleStyle}"/>
                        <TextBlock Text="{Binding AverageResponseTime}" Style="{StaticResource MetricValueStyle}"/>
                        <TextBlock Text="minutes:seconds" FontSize="10" Foreground="#FFAAAAAA" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Detailed Logs -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- API Calls Log -->
            <GroupBox Grid.Column="0" Header="Recent API Calls" Foreground="White" Margin="0,0,5,0">
                <DataGrid ItemsSource="{Binding RecentApiCalls}" 
                          Background="#FF2D2D30" 
                          Foreground="White"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#FF3F3F46"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserReorderColumns="False"
                          CanUserResizeColumns="True"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding TimestampUtc}" Width="60"/>
                        <DataGridTextColumn Header="Method" Binding="{Binding Method}" Width="60"/>
                        <DataGridTextColumn Header="Endpoint" Binding="{Binding Endpoint}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding StatusCode}" Width="60"/>
                        <DataGridTextColumn Header="Duration (ms)" Binding="{Binding DurationMs}" Width="90"/>
                        <DataGridTextColumn Header="Success" Binding="{Binding Success}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Circuit State Changes -->
            <GroupBox Grid.Column="1" Header="Circuit State Changes" Foreground="White" Margin="5,0,0,0">
                <DataGrid ItemsSource="{Binding RecentCircuitChanges}" 
                          Background="#FF2D2D30" 
                          Foreground="White"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#FF3F3F46"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserReorderColumns="False"
                          CanUserResizeColumns="True"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding TransitionTimeUtc, StringFormat='HH:mm:ss'}" Width="60"/>
                        <DataGridTextColumn Header="From" Binding="{Binding PreviousState}" Width="80"/>
                        <DataGridTextColumn Header="To" Binding="{Binding NewState}" Width="80"/>
                        <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="*"/>
                        <DataGridTextColumn Header="Failure %" Binding="{Binding FailureRate}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" VerticalAlignment="Bottom" Background="#FF007ACC" Height="25">
            <TextBlock Text="{Binding LastError, StringFormat='Last Error: {0}'}" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       Margin="10,0"/>
        </Border>

    </Grid>
</UserControl>
