<Window x:Class="MesTechStok.Desktop.Views.CategoryManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kategoriler" Height="520" Width="720" WindowStartupLocation="CenterOwner"
        Background="White">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="ðŸ—‚ï¸" FontSize="20" Margin="0,0,8,0"/>
            <TextBlock Text="Kategori YÃ¶netimi" FontSize="18" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Search / Paging Bar -->
        <Grid Grid.Row="1" Margin="0,10,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ara:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="TxtSearchCat" Width="240" KeyUp="TxtSearchCat_KeyUp"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="12,0,0,0">
                <TextBlock Text="Sayfa boyutu:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox x:Name="CmbCatPageSize" Width="80" SelectionChanged="CmbCatPageSize_SelectionChanged">
                    <ComboBoxItem Content="20" Tag="20"/>
                    <ComboBoxItem Content="50" Tag="50"/>
                    <ComboBoxItem Content="100" Tag="100"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0">
                <Button x:Name="BtnPrev" Content="â—€" Width="40" Click="PrevPage_Click"/>
                <TextBlock x:Name="TxtPageInfo" Text="Sayfa 1/1" VerticalAlignment="Center" Margin="8,0"/>
                <Button x:Name="BtnNext" Content="â–¶" Width="40" Click="NextPage_Click"/>
            </StackPanel>
            <TextBlock Grid.Column="3" x:Name="TxtTotalInfo" Text="0 sonuÃ§" VerticalAlignment="Center"/>
        </Grid>

        <!-- List -->
        <DataGrid x:Name="CategoriesGrid" Grid.Row="2" Margin="0,0,0,10" AutoGenerateColumns="False"
                  CanUserAddRows="False" IsReadOnly="True" 
                  HeadersVisibility="Column" 
                  RowHeaderWidth="0"
                  SelectionMode="Single"
                  AlternatingRowBackground="#FAFAFA"
                  SelectionChanged="CategoriesGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="60" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Ad" Width="*" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Kod" Width="140" Binding="{Binding Code}"/>
                <DataGridCheckBoxColumn Header="Aktif" Width="80" Binding="{Binding IsActive}"/>
                <DataGridTextColumn Header="AÃ§Ä±klama" Width="200" Binding="{Binding Description}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer / Add-Edit form -->
        <Border Grid.Row="3" Padding="10" Background="#F7F7F7" CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Kategori AdÄ±" Foreground="#666"/>
                        <TextBox x:Name="TxtCatName" Width="260" Margin="0,2,8,0"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Kod (opsiyonel)" Foreground="#666"/>
                        <TextBox x:Name="TxtCatCode" Width="160" Margin="0,2,8,0"/>
                    </StackPanel>
                    <CheckBox x:Name="ChkActive" Content="Aktif" IsChecked="True" VerticalAlignment="Bottom" Margin="0,20,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Ekle" Width="90" Margin="0,0,8,0" Click="AddCategory_Click"/>
                    <Button Content="GÃ¼ncelle" Width="90" Margin="0,0,8,0" Click="UpdateCategory_Click"/>
                    <Button Content="Sil" Width="90" Margin="0,0,8,0" Click="DeleteCategory_Click"/>
                    <Button Content="Temizle" Width="90" Margin="0,0,8,0" Click="ClearForm_Click"/>
                    <Button Content="Kapat" Width="90" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>


