<Window x:Class="MesTechStok.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MesTech Stok Sistemi" 
        Height="600" Width="520"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ResizeMode="CanResize"
        MinWidth="480" MinHeight="520">
    
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Üst Menü -->
        <Menu Grid.Row="0" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <MenuItem Header="Giriş">
                <MenuItem x:Name="MenuShowPassword" Header="Şifreyi Göster" IsCheckable="True" Checked="MenuShowPassword_Checked" Unchecked="MenuShowPassword_Unchecked"/>
                <Separator/>
                <MenuItem Header="Sanal Klavye" Click="MenuVirtualKeyboard_Click"/>
                <MenuItem Header="Şifremi Unuttum" Click="MenuForgotPassword_Click"/>
                <Separator/>
                <MenuItem Header="Kapat" Click="CloseButton_Click"/>
            </MenuItem>
        </Menu>
        
        <Border Grid.Row="1" Background="White" 
                Margin="20" 
                CornerRadius="10"
                BorderThickness="1"
                BorderBrush="#E0E0E0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="Gray" Opacity="0.3"/>
            </Border.Effect>
            
            <StackPanel Margin="30" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                
                <TextBlock Text="MesTech Stok Sistemi" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Foreground="#2D3748"
                          Margin="0,0,0,20"/>
                
                <TextBlock Text="Kullanıcı Adı" 
                          FontSize="12" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5"
                          Foreground="#4A5568"/>
                <TextBox x:Name="UsernameTextBox" 
                        Height="35" 
                        Text="admin" 
                        FontSize="12"
                        Padding="10,8"
                        Margin="0,0,0,15"
                        BorderBrush="#D1D9E6"
                        BorderThickness="1"/>
                
                <TextBlock Text="Şifre" 
                          FontSize="12" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5"
                          Foreground="#4A5568"/>
                <PasswordBox x:Name="PasswordBox" 
                            Height="35" 
                            FontSize="12"
                            Padding="10,8"
                            Margin="0,0,0,8"
                            BorderBrush="#D1D9E6"
                            BorderThickness="1"
                            PasswordChar="●"/>

                <!-- Şifre görünür alan (toggle ile açılır) -->
                <TextBox x:Name="PasswordVisibleTextBox"
                         Height="35"
                         FontSize="12"
                         Padding="10,8"
                         Margin="0,0,0,8"
                         BorderBrush="#D1D9E6"
                         BorderThickness="1"
                         Visibility="Collapsed"/>

                <!-- Giriş seçenekleri -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <CheckBox x:Name="ShowPasswordCheckBox" Content="Şifreyi göster" Margin="0,0,16,0" Checked="ShowPasswordCheckBox_Checked" Unchecked="ShowPasswordCheckBox_Unchecked"/>
                    <CheckBox x:Name="RememberMeCheckBox" Content="Beni hatırla"/>
                </StackPanel>
                
                <Button x:Name="LoginButton" 
                        Content="Sisteme Giriş Yap" 
                        Height="40" 
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#4299E1" 
                        Foreground="White"
                        BorderThickness="0"
                        Click="LoginButton_Click" 
                        Cursor="Hand"
                        Margin="0,0,0,15"/>
                
                <Border x:Name="StatusBorder" 
                        Background="#F7FAFC" 
                        BorderBrush="#E2E8F0"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10" 
                        Visibility="Collapsed"
                        Margin="0,0,0,15">
                    <TextBlock x:Name="StatusMessage" 
                              FontSize="11"
                              Foreground="#4A5568"
                              TextAlignment="Center"
                              TextWrapping="Wrap"/>
                </Border>
                
                <Border Background="#E6F3FF" 
                        CornerRadius="5" 
                        Padding="10" 
                        Margin="0,0,0,10">
                    <TextBlock Text="Demo Giriş: admin / Admin123!" 
                              FontSize="11" 
                              Foreground="#2B6CB0"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"/>
                </Border>
                
                <Button Content="Uygulamayı Kapat" 
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#E53E3E"
                        FontSize="11"
                        Cursor="Hand"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Center"/>
                
            </StackPanel>
        </Border>
    </Grid>
</Window>
