<Window x:Class="MesTechStok.Desktop.Views.AddStockLotDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stok Girişi (Lot)" Height="320" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundLightBrush}">
    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}"/>
        <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}"/>
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="TitleText" Style="{StaticResource HeaderSmallStyle}" Margin="0,0,0,10"/>
        <TextBlock Grid.Row="1" x:Name="CurrentStockText" Style="{StaticResource BodyTextSecondaryStyle}" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Miktar" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="QuantityTextBox" Style="{StaticResource ModernTextBox}" Width="100"/>
                <TextBlock Text="  Birim Maliyet" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="16,0,10,0"/>
                <TextBox x:Name="UnitCostTextBox" Style="{StaticResource ModernTextBox}" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Lot No" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="LotNumberTextBox" Style="{StaticResource ModernTextBox}" Width="140"/>
                <TextBlock Text="  SKT" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="16,0,10,0"/>
                <DatePicker x:Name="ExpiryDatePicker" Style="{StaticResource ModernDatePicker}" Width="140"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Not" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="NotesTextBox" Style="{StaticResource ModernTextBox}" Width="320"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="✅ Ekle" Style="{StaticResource ModernSuccessButtonStyle}" Width="120" Height="36" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="❌ İptal" Style="{StaticResource ModernButtonStyle}" Background="#6C757D" Width="120" Height="36" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>


