                              RowStyle="{StaticResource ModernRowStyle}"
                              SnapsToDevicePixels="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True">
                        <DataGrid.Resources>
                            <!-- Enhanced Pagination for Inventory -->
                            <components:PaginationComponent x:Key="InventoryPagination"/>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="ðŸ”´ Durum" Width="60">
