            <Setter Property="Background" Value="#CCFFFFFF"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="110"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="14" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="16" ShadowDepth="4" Color="#22000000" Opacity="0.35"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="#F7FAFF"/>
                                <Setter TargetName="b" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Hover ile aÃ§Ä±lan kenar menÃ¼ler iÃ§in tetik bÃ¶lgeleri ve animasyonlar -->
        <Grid.Triggers>
            <!-- Sol panel gÃ¶ster -->
            <EventTrigger RoutedEvent="MouseEnter" SourceName="LeftHotZone">
                <BeginStoryboard x:Name="ShowLeftDrawer">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="LeftSidebarTransform"
                                         Storyboard.TargetProperty="X"
                                         To="0" Duration="0:0:0.25">
                            <DoubleAnimation.EasingFunction>
                                <QuadraticEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <!-- Sol panel gizle -->
            <EventTrigger RoutedEvent="MouseLeave" SourceName="LeftSidebar">
                <BeginStoryboard x:Name="HideLeftDrawer">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="LeftSidebarTransform"
                                         Storyboard.TargetProperty="X"
                                         To="-360" Duration="0:0:0.25">
                            <DoubleAnimation.EasingFunction>
                                <QuadraticEase EasingMode="EaseIn"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>

            <!-- SaÄŸ panel gÃ¶ster -->
            <EventTrigger RoutedEvent="MouseEnter" SourceName="RightHotZone">
                <BeginStoryboard x:Name="ShowRightDrawer">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="RightPanelTransform"
                                         Storyboard.TargetProperty="X"
                                         To="0" Duration="0:0:0.25">
                            <DoubleAnimation.EasingFunction>
                                <QuadraticEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <!-- SaÄŸ panel gizle -->
            <EventTrigger RoutedEvent="MouseLeave" SourceName="RightPanel">
                <BeginStoryboard x:Name="HideRightDrawer">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="RightPanelTransform"
                                         Storyboard.TargetProperty="X"
                                         To="320" Duration="0:0:0.25">
                            <DoubleAnimation.EasingFunction>
                                <QuadraticEase EasingMode="EaseIn"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        <!-- Main Background Image -->
