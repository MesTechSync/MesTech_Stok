        </LinearGradientBrush>
        <LinearGradientBrush x:Key="BrushDrop" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7E57C2" Offset="0"/>
            <GradientStop Color="#4527A0" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="BrushAuto" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF7043" Offset="0"/>
            <GradientStop Color="#D84315" Offset="1"/>
        </LinearGradientBrush>

        <!-- YÃ¼ksek kaliteli primer kapsÃ¼l buton -->
        <Style x:Key="PrimaryPillButton" TargetType="Button">
