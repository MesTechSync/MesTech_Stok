<Window x:Class="MesTechStok.Desktop.Views.ProductImageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ürün Görselleri" WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" Width="1200" Height="900" Background="#CC000000" AllowsTransparency="True"
        MouseDown="Overlay_MouseDown" KeyDown="Window_KeyDown">
    <Grid Margin="24">
        <Border Background="White" CornerRadius="12" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="2" Content="✕" Width="36" Height="36" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Close_Click"/>

                <!-- Sol ok -->
                <Button Grid.Row="0" Grid.Column="0" Content="◀" Width="44" Height="44" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="6" Click="Prev_Click"/>
                <!-- Sağ ok -->
                <Button Grid.Row="0" Grid.Column="2" Content="▶" Width="44" Height="44" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="6,0,50,0" Click="Next_Click"/>

                <Border Grid.Row="0" Grid.Column="1" Background="#00000008">
                    <ScrollViewer x:Name="Scroller" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" PanningMode="Both" PreviewMouseMove="MainImage_PreviewMouseMove" PreviewMouseLeftButtonDown="MainImage_MouseDown" PreviewMouseLeftButtonUp="MainImage_MouseUp">
                        <Grid Width="800" Height="1200">
                            <Image x:Name="MainImage" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="HighQuality"
                                   MouseWheel="MainImage_MouseWheel"
                                   IsManipulationEnabled="True"
                                    ManipulationStarting="MainImage_ManipulationStarting"
                                    ManipulationDelta="MainImage_ManipulationDelta"
                                    MouseDown="MainImage_MouseClick"/>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                    <ItemsControl x:Name="Thumbs">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="6" BorderThickness="2" CornerRadius="6" BorderBrush="Transparent">
                                    <Image Source="{Binding}" Width="72" Height="72" Stretch="Uniform" MouseDown="Thumb_MouseDown"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

